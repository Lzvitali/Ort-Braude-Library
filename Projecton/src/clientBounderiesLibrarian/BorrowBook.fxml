<AnchorPane prefHeight="317.0" prefWidth="499.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox layoutX="123.0" layoutY="99.0" prefHeight="102.0" prefWidth="253.0" spacing="20.0">
