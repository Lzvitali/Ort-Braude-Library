            <JFXTextField labelFloat="true" promptText="Reader Account ID">
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </JFXTextField>
            <JFXTextField fx:id="CopyIdBtn" labelFloat="true" onAction="#setDateForBorrowBook" promptText="Copy ID">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font name="System Bold Italic" size="14.0" />
               </font>
            </JFXTextField>
         </children></VBox>
      <Text fx:id="BorrowDateText" layoutX="137.0" layoutY="217.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Borrow date" />
      <Text fx:id="ReturnDateText" layoutX="292.0" layoutY="217.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Return date" />
      <ImageView fitHeight="54.0" fitWidth="337.0" layoutX="94.0" layoutY="21.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../icons/titles-librarian/borrowBook.gif" />
         </image>
      </ImageView>
      <HBox layoutX="123.0" layoutY="256.0" prefHeight="47.0" prefWidth="303.0">
         <children>
            <JFXButton fx:id="CancelBtn" onAction="#cancelBorrrow" prefHeight="25.0" prefWidth="116.0" stylesheets="@buttonsStyle.css" text="Cancel">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </JFXButton>
            <AnchorPane prefHeight="47.0" prefWidth="26.0" />
            <JFXButton fx:id="AproveBtn" onAction="#aproveBorrowBook" prefHeight="25.0" prefWidth="116.0" stylesheets="@buttonsStyle.css" text="Aprove">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </JFXButton>
         </children>
      </HBox>
   </children>
</AnchorPane>
